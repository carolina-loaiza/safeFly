@{
    ViewBag.Title = "VRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/Views/BaseClass.js"></script>
<script src="~/Scripts/Views/VRole.js"></script>

<h2>Crear Rol</h2>
<div class="card border-secondary" style="margin-top: 50px;">
    <div class="card-header">
        <div class="row pull-left">
            <div class="col-md-12">role</div>
            <div class="col-md-4">
                @Html.CtrlButton("VRole", "btnCreate", "Save", "Create", "success")
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="bs-component">
                    <form id="frmRole">
                        <div class="row">
                            <div class="col-md-6">
                                @Html.CtrlInput("Name", "text", "View name", columnDataName: "Name")
                            </div>
                            <div class="col-md-6">
                                @Html.CtrlInput("Description", "text", "Descripion", columnDataName: "Description")
                            </div>
                            @*@Html.CtrlDropDown(id: "drpGender", label: "Gender", listId: "LST_GENERO")*@
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>