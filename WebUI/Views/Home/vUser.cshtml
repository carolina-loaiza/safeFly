@using WebUI.Helpers;

<script src="~/Scripts/Views/vUser.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.CtrlTable(viewName: "vUser", id: "tblUsers", title: "User List",
    columnsTitle: "ID,First Name,Second Name,Last Name,Last Name,Email,Birthdate,Phone Number,Status", ColumnsDataName: "ID,FirstName,SecondName,LastName1,LastName2,Email,BirthDate,PhoneNumber,Status", onSelectFunction: "BindFields")


<div class="card border-secondary" style="margin-top: 50px;">
    <div class="card-header">
        <div class="row pull-right">
            <div class="col-md-8">User edition</div>
            <div class="col-md-4">
                @Html.CtrlButton(viewName: "vUser", id: "btnCreate", label: "Save", onClickFunction: "Create", buttonType: "success")
                @Html.CtrlButton(viewName: "vUser", id: "btnUpdate", label: "Modify", onClickFunction: "Update", buttonType: "info")
                @Html.CtrlButton(viewName: "vUser", id: "btnDelete", label: "Delete", onClickFunction: "Delete", buttonType: "danger")
                @Html.CtrlButton(viewName: "vUser", id: "btnActivar", label: "Activate", onClickFunction: "Activar", buttonType: "success")
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="bs-component">
                    <form id="frmEdition">
                        <div class="row">
                            <div class="col-md-6">
                                @Html.CtrlInput(id: "txtID", type: "text", label: "ID", columnDataName: "ID")
                                @Html.CtrlInput(id: "txtFirstName", type: "text", label: "First Name", columnDataName: "FirstName")
                                @Html.CtrlInput(id: "txtSecondName", type: "text", label: "Second Name", columnDataName: "SecondName")
                                @Html.CtrlInput(id: "txtLastName1", type: "text", label: "Last Name", columnDataName: "LastName1")
                            </div>
                            <div class="col-md-6">
                                @Html.CtrlInput(id: "txtLastName2", type: "text", label: "Last Name", columnDataName: "LastName2")
                                @Html.CtrlInput(id: "txtEmail", type: "text", label: "Email", columnDataName: "Email")
                                @Html.CtrlInput(id: "txtBirthDate", type: "date", label: "Birthdate", columnDataName: "BirthDate")
                                @Html.CtrlInput(id: "txtPhoneNumber", type: "text", label: "Phone Number", columnDataName: "PhoneNumber")
                                @*@Html.CtrlInput(id: "txtStatus", type: "text", label: "Status", columnDataName: "Status")*@
                                @* @Html.CtrlDropDown(id: "drpGender", label: "Gender", listId: "LST_GENERO")*@
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>