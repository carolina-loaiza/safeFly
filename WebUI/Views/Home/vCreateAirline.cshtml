@using WebUI.Helpers;

<script src="~/Scripts/Views/vAirline.js"></script>
<script src="~/Scripts/Views/vUser.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card border-secondary" style="margin-top: 50px;">
    <div class="card-header">
        <div class="row pull-right">
            <div class="col-md-8"><h5>Paso #1: Información del administrador de la aerolínea.</h5></div>
            <div class="col-md-4">
                @Html.CtrlButton(viewName: "vUser", id: "btnCreate", label: "Guardar", onClickFunction: "Create", buttonType: "success")
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="bs-component">
                    <form id="frmEdition">
                        <div class="row">
                            <div class="col-md-6">
                                @Html.CtrlInput(id: "txtID", type: "text", label: "ID", columnDataName: "ID")
                                @Html.CtrlInput(id: "txtFirstName", type: "text", label: "First Name", columnDataName: "FirstName")
                                @Html.CtrlInput(id: "txtSecondName", type: "text", label: "Second Name", columnDataName: "SecondName")
                                @Html.CtrlInput(id: "txtLastName1", type: "text", label: "Last Name", columnDataName: "LastName1")
                            </div>
                            <div class="col-md-6">
                                @Html.CtrlInput(id: "txtLastName2", type: "text", label: "Last Name", columnDataName: "LastName2")
                                @Html.CtrlInput(id: "txtEmail", type: "text", label: "Email", columnDataName: "Email")
                                @Html.CtrlInput(id: "txtBirthDate", type: "date", label: "Birthdate", columnDataName: "BirthDate")
                                @Html.CtrlInput(id: "txtPhoneNumber", type: "text", label: "Phone Number", columnDataName: "PhoneNumber")
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card border-secondary" style="margin-top: 50px;">
    <div class="card-header">
        <div class="row pull-right">
            <div class="col-md-8"><h5>Paso #2: Información de la aerolínea.</h5></div>
            <div class="col-md-4">
                @Html.CtrlButton(viewName: "vAirline", id: "btnCreateAirline", label: "Guardar", onClickFunction: "CreateAirline", buttonType: "success")
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="bs-component">
                    <form id="formAirline">
                        <div class="row">
                            <div class="col-md-6">
                                @Html.CtrlInput(id: "txtID", type: "text", label: "ID", columnDataName: "ID")
                                @Html.CtrlInput(id: "txtName", type: "text", label: "Name", columnDataName: "Name")
                                @Html.CtrlInput(id: "txtBusinessName", type: "text", label: "Business Name", columnDataName: "BusinessName")
                                @Html.CtrlInput(id: "txtAdmin", type: "text", label: "Administrator", columnDataName: "Admin")
                                @Html.CtrlInput(id: "txtEmail", type: "text", label: "Email", columnDataName: "Email")
                            </div>
                            <div class="col-md-6">
                                @Html.CtrlInput(id: "txtPhoneNumber", type: "text", label: "Phone Number", columnDataName: "PhoneNumber")
                                @Html.CtrlInput(id: "txtRepresentantLegal", type: "text", label: "Representant Legal", columnDataName: "RepresentantLegal")
                                @Html.CtrlInput(id: "txtInscriptionDate", type: "date", label: "Inscription Date", columnDataName: "InscriptionDate")
                                @Html.CtrlInput(id: "txtUrlLogo", type: "text", label: "Url Logo", columnDataName: "UrlLogo")
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="card border-secondary" style="margin-top: 50px;">
    <div class="card-header">
        <div class="row pull-right">
            <div class="col-md-8"><h5>Paso #3: Seleccione los aeropuertos:</h5></div>
            <div class="col-md-4">
                @Html.CtrlButton(viewName: "vAirline", id: "btnCreateSolicitude", label: "Enviar solicitud", onClickFunction: "CreateSolicitude", buttonType: "success")
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="bs-component">
                    <form id="formSolicitude">
                        <div class="row" id="airportListContainer">

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>