@using WebUI.Helpers;

<script src="~/Scripts/Views/vAirport.js"></script>

<script src="https://api.mapbox.com/mapbox-gl-js/v0.53.0/mapbox-gl.js"></script>
<script src="~/Scripts/Views/Mapa.js"></script>

<link href="https://api.mapbox.com/mapbox-gl-js/v0.53.0/mapbox-gl.css" rel="stylesheet" />
<link href="~/Content/Map.css" rel="stylesheet" />

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.CtrlTable(viewName: "vAirport", id: "tblAirports", title: "Airports List",
    columnsTitle: "Legal number,Airport name,Business name,Id administrator,Email,Representative,Id Representative,Status", ColumnsDataName: "LegalNumber,NameAirport,BusinessName,Administrator,Email,Representative,RepresentativeID,Estado", onSelectFunction: "BindFields")


<div class="card border-secondary" style="margin-top: 50px;">
    <div class="card-header">
        <div class="row pull-right">
            <div class="col-md-7">Airport edition</div>
            <div class="col-md-5">
                @Html.CtrlButton(viewName: "vAirport", id: "btnCreate", label: "Save", onClickFunction: "Create", buttonType: "success")
                @Html.CtrlButton(viewName: "vAirport", id: "btnUpdate", label: "Modify", onClickFunction: "Update", buttonType: "info")
                @Html.CtrlButton(viewName: "vAirport", id: "btnDelete", label: "Desactivate", onClickFunction: "Delete", buttonType: "danger")
                @Html.CtrlButton(viewName: "vAirport", id: "btnActivar", label: "Activate", onClickFunction: "Activar", buttonType: "success")
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="bs-component">
                    <form id="frmEdition">
                        <div class="row">
                            <div class="col-md-6">
                                @Html.CtrlInput(id: "txtLegalNumber", type: "text", label: "Legal number", columnDataName: "LegalNumber")
                                @Html.CtrlInput(id: "txtNameAirport", type: "text", label: "Airport name", columnDataName: "NameAirport")
                                @Html.CtrlInput(id: "txtBusinessName", type: "text", label: "Business name", columnDataName: "BusinessName")
                                @Html.CtrlInput(id: "txtAdministrator", type: "text", label: "Administrator id", columnDataName: "Administrator")
                            </div>

                            <div class="col-md-6">
                                @Html.CtrlInput(id: "txtEmail", type: "text", label: "Email", columnDataName: "Email")
                                @Html.CtrlInput(id: "txtRepresentative", type: "text", label: "Representative", columnDataName: "Representative")
                                @Html.CtrlInput(id: "txtRepresentativeID", type: "number", label: "RepresentativeID", columnDataName: "RepresentativeID")
                            </div>
                        </div>

                        <div hidden>
                            @Html.CtrlInput(id: "txtLatitude", type: "text", label: "Latitude", columnDataName: "Latitude")
                            @Html.CtrlInput(id: "txtLongitude", type: "text", label: "Longitude", columnDataName: "Longitude")
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div id="map">

        </div>
    </div>
</div>

