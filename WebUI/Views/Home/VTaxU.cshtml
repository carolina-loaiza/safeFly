@{
    ViewBag.Title = "VRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/Views/BaseClass.js"></script>
<script src="~/Scripts/Views/VTax.js"></script>

<h2>Modificar Rol</h2>


@Html.CtrlTable(viewName: "VTax", id: "tblTax", title: "Tax List",
    columnsTitle: "Nombre,Descripcion,Amount", ColumnsDataName: "Name,Description,Amount", onSelectFunction: "BindFields" )



<div class="card border-secondary" style="margin-top: 50px;">
    <div class="card-header">
        <div class="row pull-left">
            <div class="col-md-12">role</div>
            <div class="col-md-4">
                @Html.CtrlButton("VTax", "btnUpdate", "Save", "Update", "success")
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-6">
                <div class="bs-component">
                    <form id="frmTax" clas ="row">
                        <div class="col-md-6">
                            <span style="display: none">
                                @Html.CtrlInput("ID", "text", "ID", columnDataName: "Id")
                            </span>
                            @Html.CtrlInput("Amount", "number", "Amount", columnDataName: "Amount")
                            @Html.CtrlInput("Name", "text", "Tax name", columnDataName: "Name")
                        </div>
                        <div class="col-md-6">
                            @Html.CtrlInput("Description", "text", "Descripción", columnDataName: "Description")
                            @Html.CtrlInput("Status", "checkbox", "Status", columnDataName: "Status")
                        </div>
                        @*@Html.CtrlDropDown(id: "drpGender", label: "Gender", listId: "LST_GENERO")*@
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

        const vRol = new VTax();
        vRol.RetrieveAll();

    });
</script>