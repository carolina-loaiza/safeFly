<script src="~/Scripts/Views/contactUs.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>

@{
    <!--El siguiente Layout se muestra en CADA VISTA, es el header donde aparecen las opciones de la pagina (parte azul)  -->
    Layout = "~/Views/Shared/_LayoutTheme.cshtml";
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<div class="container contact">

    <div class="col-md-9">
        <div class="contact-form">
@*  *@

            <div class="col-md-6">
                <div class="form-group">
                    <h2>  Contact Us</h2>
                    <h4>  We would love to hear from you !</h4>
                    <img src="https://image.ibb.co/kUASdV/contact-image.png" alt="image" />
                </div>


            </div>
            <form id="frmEdition">
                <div class="form-group">

                    <div class="col-sm-10">
                        @Html.CtrlInput(id: "txtFirstName", type: "text", label: "First Name", columnDataName: "FirstName")
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        @Html.CtrlInput(id: "txtLastName", type: "text", label: "Last Name", columnDataName: "LastName")
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        @Html.CtrlInput(id: "txtEmail", type: "text", label: "Email", columnDataName: "Email")
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10">
                        @Html.CtrlInput(id: "txtComment", type: "textarea", label: "Comment", columnDataName: "Comment")
                    </div>

                </div>
            </form>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            @Html.CtrlButton(viewName: "contactUs", id: "btnCorreo", label: "Submit", onClickFunction: "Create", buttonType: "success")
        </div>
    </div>




    @*=========== INICIO RATING DEL VUELO ============ *@


    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <link href="../theme/css/starRating.css" rel="stylesheet">

    <h2 class="text-center" alt="Simple"> Rate your flying experience:</h2>



    <div class="container">
        <form class="rating" method="post">
            <div class="starrating risingstar d-flex justify-content-center flex-row-reverse">
                <input type="radio" id="star5" name="rating" value="5" onclick="ratingFlyJS();" /><label for="star5" title="5 star"></label>
                <input type="radio" id="star4" name="rating" value="4" onclick="ratingFlyJS();" /><label for="star4" title="4 star"></label>
                <input type="radio" id="star3" name="rating" value="3" onclick="ratingFlyJS();" /><label for="star3" title="3 star"></label>
                <input type="radio" id="star2" name="rating" value="2" onclick="ratingFlyJS();" /><label for="star2" title="2 star"></label>
                <input type="radio" id="star1" name="rating" value="1" onclick="ratingFlyJS();" /><label for="star1" title="1 star"></label>
            </div>
        </form>
    </div>

    @*=========== FIN RATING DEL VUELO ============ *@


</div>

