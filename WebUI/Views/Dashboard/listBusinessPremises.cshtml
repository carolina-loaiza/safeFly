@using WebUI.Helpers;


<script src="~/Scripts/Views/vBusinessPremises.js"></script>

@{
    Layout = "~/Views/Shared/_LayoutTheme.cshtml";
}

<div class="row pull-right">
    <div class="col-md-7">Airport edition</div>
    <div class="col-md-5">
        @Html.CtrlButton(viewName: "vBusinessPremises", id: "btnUpdate", label: "Update", onClickFunction: "Update", buttonType: "info")
        @Html.CtrlButton(viewName: "vBusinessPremises", id: "btnDelete", label: "Desactivate", onClickFunction: "Delete", buttonType: "danger")
        @Html.CtrlButton(viewName: "vBusinessPremises", id: "btnActivar", label: "Activate", onClickFunction: "Activar", buttonType: "success")


    </div>
</div>

@Html.CtrlTable(viewName: "vBusinessPremises", id: "tblBusiness", title: "Business premises list",
            columnsTitle: "Id,Id airport,Rental amount,Description,Tenant,Id tenant,Phone,Area,Comerce number,Status", ColumnsDataName: "ID,AirportID,AlquilerAmount,Description,Tenant,TenantID,Phone,Area,ComerceNumber,Status", onSelectFunction: "BindFields")

<div class="bs-component">
    <form id="frmEdition">
        <div class="row">
            <div class="col-md-6">
                @Html.CtrlInput(id: "txtID", type: "text", label: "Id", columnDataName: "ID")
                @Html.CtrlInput(id: "txtAirportID", type: "text", label: "Id Airport", columnDataName: "AirportID")
                @Html.CtrlInput(id: "txtAlquilerAmount", type: "text", label: "Rental amount", columnDataName: "AlquilerAmount")
                @Html.CtrlInput(id: "txtDescription", type: "text", label: "Description", columnDataName: "Description")
                @Html.CtrlInput(id: "txtTenant", type: "text", label: "Tenant", columnDataName: "Tenant")
            </div>
            <div class="col-md-6">
                @Html.CtrlInput(id: "txtTenantID", type: "text", label: "Tenant id", columnDataName: "TenantID")
                @Html.CtrlInput(id: "txtPhone", type: "text", label: "Phone", columnDataName: "Phone")
                @Html.CtrlInput(id: "txtArea", type: "text", label: "Area", columnDataName: "Area")
                @Html.CtrlInput(id: "txtComerceNumber", type: "text", label: "Comerce number", columnDataName: "ComerceNumber")
            </div>
        </div>
    </form>
</div>
