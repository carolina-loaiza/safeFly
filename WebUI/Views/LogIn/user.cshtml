@using WebUI.Helpers;

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Login SafeFly</title>

    <!-- Custom fonts for this template-->
    <link href="../theme/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="../theme/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="../theme/css/custom-theme.css" rel="stylesheet">

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/Views/vLogIn.js"></script>
    <script src="~/Scripts/Views/ControlActions.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>
</head>

<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center login-logo">
                                        <img src="../theme/image/logo.png" alt="SafeFly" />
                                    </div>
                                    <form id="frmEdition">
                                        <div class="form-group">
                                            @Html.CtrlInput(id: "txtEmail", type: "text", label: "Email", columnDataName: "UserID")
                                            @Html.CtrlInput(id: "txtPassword", type: "password", label: "Password", columnDataName: "Keyword")
                                        </div>
                                    </form>
                                    <div class="btn-block-custom">
                                        @Html.CtrlButton(viewName: "vLogIn", id: "btnInicio_Sesion", label: "Log in", onClickFunction: "SendCredentials", buttonType: "primary")
                                    </div>
                                    <hr>
                                    <div class="text-center">
                                        @Html.ActionLink("Don't have an account? Sign up!", "user", "Register", null, new { @class = "small" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
